@model CleanArchitecture.Application.ViewModels.HoaDonDetails

@{
    ViewData["Title"] = "Details";
}

<h1>Chi Tiết</h1>

<div>
    <h4>Hóa Đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Khách Hàng
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hoadon.IdkhachHangNavigation.Ten)
        </dd>
        <dt class="col-sm-2">
            Nhân Viên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hoadon.IdnguoiDungNavigation.TenNguoiDung)
        </dd>
        <dt class="col-sm-2">
            Ngày
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hoadon.Ngaymua)
        </dd>
        <dt class="col-sm-2">
            Tổng Tiền:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.hoadon.Gia)
        </dd>

    </dl>
</div>
<div>
    <h4>Chi Tiết Hóa Đơn</h4>
    <hr />
    <p>
        <a asp-action="CreateCTHD">Thêm</a>
    </p>
    <dl class="row">
        <dd>
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            Xe
                        </th>
                        <th>
                            Số Lượng
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.cthoadons)
                    {
                        <tr>

                            <td>
                                @Html.DisplayFor(modelItem => item.IdxeNavigation.Ten)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Soluong)
                            </td>
                            <td>
                                <a asp-action="DeleteCT" asp-route-id="@item.Id">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
</div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.hoadon.Id">Sửa</a> |
            <a asp-action="Index">Quay Lại</a>
        </div>

